<WuContentHeader @tagline="Leidinggevendendatabank" />
<div class="layout layout--wide">
  <h1 class="h1">Contact</h1>
  <form class="u-spacer--large js-formvalidation-bound">
    <div class="form__row">
      <label class="form__label form__label--large form__label--block" for="select">Waar gaat uw bericht over?</label>
      <WuRadioButton @label="Een functionaliteit, bug of probleem" @value="loketlokaalbestuur@vlaanderen.be" @onChange={{action (mut mailto)}} @isBlock={{true}} />
      <WuRadioButton @label="Een inhoudelijke vraag over leidinggevenden" @value="loketlokaalbestuur@vlaanderen.be" @onChange={{action (mut mailto)}} @isBlock={{true}} />
      <div class="form__error" aria-describedby="radio-buttons"></div>
    </div>

    {{#if mailto}}
      <a href={{concat "mailto:" mailto}} class="button button--large">Bericht versturen</a>
    {{else}}
      <WuButton @label="Bericht versturen" @onClick={{null}} @size="large" @disabled={{true}} />
    {{/if}}
  </form>
</div>

{{outlet}}
