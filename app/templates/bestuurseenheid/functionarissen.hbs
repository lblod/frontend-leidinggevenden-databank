<div class="u-padding--rl--small u-background--gray-lighter">
  <div class="u-padding--top--tiny">
    <div class="grid">
      <div class="col--6-12">
        <a class="link--icon">
          {{#link-to "index"}}
            <small><i  class="vi-arrow vi-u-180deg vi"></i> Terug naar zoeken</small>
          {{/link-to}}
        </a>
      </div>
    </div>
  </div>

  <div class="u-padding--tb" id="main">

    <div typeof="http://data.vlaanderen.be/ns/besluit#Bestuursorgaan" resource="http://data.lblod.info/id/bestuursorganen/521b3f49b206a4c1269cd754cb8159f0e121e5fe6d333431ecdd78e183f71226">
      <h1 class="h2 text-light u-spacer--bottom--tiny">Leidinggevenden van de <span property="http://www.w3.org/2004/02/skos/core#prefLabel">{{bestuurseenheid.naam}}</span></h1>
    </div>
  </div>
</div>

<div class="u-padding--rl--small u-spacer--tb">
  <div class="container-flex--scroll">
    {{#functionaris-table
      class="container-flex--contain"
      content=model
      sort=sort
      page=page
      size=size
      displaySubset=hasActiveChildRoute
      filter=filter
      renderSmallTable=hasActiveChildRoute
      data-test-loket="leidinggevendenbeheer-table"
    }}
      <tbody>
        <tr>
          <td class="u-align-center u-padding--round--small" colspan="6">
            <p class="u-spacer--tiny">Geen functionaris gevonden.</p>
          </td>
        </tr>
      </tbody>
    {{/functionaris-table}}
  </div>
</div>

{{outlet}}
