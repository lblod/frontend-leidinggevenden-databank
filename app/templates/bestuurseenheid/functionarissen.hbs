<div class="au-o-region-small au-o-region--alt">
  <div class="au-o-box">
    <AuLink @linkRoute="index" class="au-u-margin-bottom">
      <AuIcon @icon="nav-left" @alignment="left" />
      Terug naar zoeken
    </AuLink>

    <div class="au-o-grid">
      <div class="au-o-grid__item au-u-1-1 au-u-1-2@small au-u-2-3@medium">
        <AuHeading @level="1" @skin="2">
          Leidinggevenden van
          <WithRdfaContext @model={{bestuurseenheid}} @tagName="span" as |bestuurseenheid|>
            <bestuurseenheid.get @prop="naam" as |attributes value|>
              <span {{rdfa attributes}}>{{value}}</span>
            </bestuurseenheid.get>
          </WithRdfaContext>
        </AuHeading>
      </div>
    </div>
  </div>
</div>
<div class="au-o-body-container au-o-box">
  <div class="au-u-margin-top-small">
    <FunctionarisTable
      @content={{filteredModel}}
      @page={{page}}
      @size={{size}}
      @sort={{sort}}
    />
  </div>
</div>
{{outlet}}