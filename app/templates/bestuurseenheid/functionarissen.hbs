<div class="u-padding--rl--small u-background--gray-lighter">
  <div class="u-padding--top--tiny">
    <div class="grid">
      <div class="col--6-12">
        <LinkTo @route="index" @query={{hash bestuurseenheidId=bestuurseenheid.id}} class="link--icon">
          <small><i class="vi-arrow vi-u-180deg vi"></i>Terug naar zoeken</small>
        </LinkTo>
      </div>
    </div>
  </div>

  <div class="u-padding--tb" id="main">
    <h1 class="h2 text-light u-spacer--bottom--tiny">
      Leidinggevenden van

      <WithRdfaContext @model={{bestuurseenheid}} @tagName="span" as |bestuurseenheid|>
        <bestuurseenheid.get @prop="naam" as |attributes value|>
          <span {{rdfa attributes}}>{{value}}</span>
        </bestuurseenheid.get>
      </WithRdfaContext>
    </h1>
  </div>
</div>

<div class="u-padding--rl--small u-spacer--tb">
  <div class="container-flex--scroll">
    <FunctionarisTable
      class="container-flex--contain"
      @content={{filteredModel}}
      @page={{page}}
      @size={{size}}
      @sort={{sort}}
    />
  </div>
</div>
{{outlet}}
