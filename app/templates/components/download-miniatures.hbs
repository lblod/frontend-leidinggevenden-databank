<div class='au-o-grid'>
  {{#if csvFile}}
    <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
      <AuCard @flex="true"
              @divided="true"
              @cardTitle="Download in CSV formaat"
              @cardSubTitle="Voor spreadsheet editors zoals Excel of Numbers."
              @badgeSkin="brand"
              @badgeIcon="download">
        <AuContent>
          <AuButton onclick={{action "download" csvFile}} metadata={{csvMetadata}} type="CSV">Download in CSV formaat</AuButton>
          <AuHelpText>{{csvMetadata}}</AuHelpText>
        </AuContent>
      </AuCard>
    </div>
  {{else}}
    <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
      <AuCard @flex="true"
              @divided="true"
              @cardTitle="Download in CSV formaat"
              @cardSubTitle="Voor spreadsheet editors zoals Excel of Numbers."
              @badgeSkin="brand"
              @badgeIcon="download">
        <AuContent>
          <AuHelpText>Momenteel niet beschikbaar</AuHelpText>
        </AuContent>
      </AuCard>
    </div>
  {{/if}}
  {{#if ttlFile}}
    <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
      <AuCard @flex="true"
              @divided="true"
              @cardTitle="Download in Turtle formaat"
              @cardSubTitle="Gestructureerde data voor dataverwerking en analyse."
              @badgeSkin="brand"
              @badgeIcon="download">
        <AuContent>
          <AuButton onclick={{action "download" ttlFile}} metadata={{ttlMetadata}} type="Turtle">Download in Turtle formaat</AuButton>
          <AuHelpText>{{ttlMetadata}}</AuHelpText>
        </AuContent>
      </AuCard>
    </div>
  {{else}}
    <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
      <AuCard @flex="true"
              @divided="true"
              @cardTitle="Download in Turtle formaat"
              @cardSubTitle="Gestructureerde data voor dataverwerking en analyse."
              @badgeSkin="brand"
              @badgeIcon="download">
        <AuContent>
          <AuHelpText>Momenteel niet beschikbaar</AuHelpText>
        </AuContent>
      </AuCard>
    </div>
  {{/if}}
</div>
<p class="au-u-margin-top">Mail naar <a href="mailto:LoketLokaalBestuur@vlaanderen.be" class="au-c-link">LoketLokaalBestuur@vlaanderen.be</a> voor meer informatie.</p>
